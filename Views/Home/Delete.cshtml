@model MvcMastery.Models.Personel

@{
    ViewData["Title"] = "Personel Sil";
}

<h2>Personel Sil</h2>

<h4>Bu personeli silmek istediğinize emin misiniz?</h4>
<div>
    <h5>@Model.Name @Model.Surname</h5>
    <dl class="row">
        <dt class = "col-sm-2">Email</dt>
        <dd class = "col-sm-10">@Model.Email</dd>

        <dt class = "col-sm-2">Telefon</dt>
        <dd class = "col-sm-10">@Model.Phone</dd>

        <dt class = "col-sm-2">Doğum Tarihi</dt>
        <dd class = "col-sm-10">@Model.DateOfBirth.ToShortDateString()</dd>
    </dl>
    
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="PersonelId" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
